#!/usr/bin/env node

/*!
 * Nitrus
 * Copyright(c) 2013 Delmo Carrozzo <dcardev@gmail.com>
 * MIT Licensed
 */

/**
  * Module dependencies.
  */
var fs = require('fs')
  , colors = require('colors')
  , nitrus = require('../lib/nitrus')
  , scriptme = require('scriptme')
  , io = require('../lib/utils/io')
  , cmd = require('../lib/utils/cmdprompt');

colors.setTheme({
  silly: 'rainbow',
  input: 'grey',
  verbose: 'cyan',
  prompt: 'grey',
  info: 'green',
  data: 'grey',
  owner: 'grey',
  help: 'cyan',
  warn: 'yellow',
  debug: 'blue',
  error: 'red'
});

// args
var   args = process.argv.slice(2)
    , path = '.'
    , action = ''
    , current = '';


// options to send
var options = {};
options.name = '',
options.force = false;

/**
 * The projects maker.
 */
var projector = new nitrus.Projector();

projector.on('log', function(msg){
  console.log(' * project - '.owner,  msg);
});

/**
 * The packages maker.
 */
var packager = new nitrus.Packager();

packager.on('log', function(msg){
  console.log(' * package - '.owner,  msg);
});

// usage docs.
var usage = [
    ''
  , '  Usage: nitrus <command>'
  , ''
  , '  where <command> is one of:'
  , '        init, apply, make, install, add'
  , ''
  , ''
  , '  Options:'
  , ''
  , '    -v, --version             Display a version of Nitrus'
  , '    -h, --help                Display this text'
  , ''
  , '    --engine                  Display the name of template engine'
  , '    --force                   Force override'
  , ''
].join('\n');

if (!args.length) { cmd.abort(usage); }

// procces args
var arg;
while (args.length) {
  arg = args.shift();
  switch (arg) {
    case '-h':
    case '--help':
      cmd.abort(usage);
    case '-v':
    case '--version':
      cmd.abort(nitrus.version);
      break;
    case '--engine':
      cmd.abort(nitrus.config.engine);
      break;
    case '--force':
      options.force = true;
      break;
    case 'init':
      action = 'init';
      (args.length >= 2) 
        ? (current = args.shift(), options.name = args.shift())
        : cmd.abort('init requires two argument');
      break;
    case 'make':
      action = 'make';
      (args.length) 
        ? (options.name = args.shift())
        : cmd.abort('make requires an argument');
    break;
    case 'apply':
      action = 'apply';
      (args.length) 
        ? (options.name = args.shift())
        : cmd.abort('apply requires an argument');
    break;
    case 'install':
      action = 'install';
      (args.length) 
        ? (options.name = args.shift())
        : cmd.abort('install requires an argument');
    break;
    case 'add':
      action = 'add';
      (args.length) 
        ? (options.name = args.shift())
        : cmd.abort('add requires an argument');
    break;
    default:
      path = arg;
  }
}

// just do it
(function(action, current, path, ops){
  
  var 
      fn = function(options) { cmd.abort('Unexpected error.'); }
      , needCheck = false
      , pathCheck = path
      , callback = function(err) { cmd.abort(err); }
      , owner;

  switch (action) {
    case 'init':
      if (current != 'project' && current != 'package') {
        cmd.abort('the instruction `' + current + '` was not found.');
      }
      if (!ops.name || ops.name == '') {
        cmd.abort('the instruction init was not found wrong name!');
      }
      needCheck = !ops.force;
      ops.output = pathCheck =  current == 'project' ? path : path + '/nitrus/packages/' + ops.name;
      fn = current == 'project' ? projector.init : packager.init;
      owner = current == 'project' ? projector : packager;
    break;
    case 'make':
      if (!ops.name || ops.name == '') {
        cmd.abort('the instruction make was not found wrong name!');
      }
      ops.input = path;
      fn = packager.make;
      owner = packager;
    break;
    case 'apply':
      if (!ops.name || ops.name == '') {
        cmd.abort('the instruction apply was not found wrong name!');
      }
      ops.input = path;
      fn = projector.apply;
      owner = projector;
    break;
    case 'install':
      ops.output = path;
      fn = packager.install;
      owner = packager;
    break;
    case 'add':
      ops.output = path;
      fn = packager.add;
      owner = packager;
    break;
    case 'update':
    case 'compress':
      cmd.abort('the command `' + current + action + '` is not supported yet!');
    default:
      cmd.abort('Oop! the action `' + current + action + '` was not expected.');
  }

  if (needCheck) {

    io.emptyDirectory(pathCheck, function(empty){
      if (empty) {
        fn.apply(owner, [ops, callback]);
      } else {
        cmd.confirm('destination is not empty, continue? ', function(ok){
          if (ok) {
            process.stdin.destroy();

            ops.force = true;
            fn.apply(owner, [ops, callback]);
          } else {
            cmd.abort('aborting');
          }
        });
      }
    });

  } else {
    fn.apply(owner, [ops, callback]);
  }

})(action, current, path, options)